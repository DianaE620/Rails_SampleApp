<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      Error No se pudo crear la cuenta debido a que se encontraron <%= pluralize(@user.errors.count, "errores") %>.
    </div>
    <ul style="list-style-type: none;">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>